      script(type="text/javascript",src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js",async)

      script(type="text/javascript",src="/javascripts/highlightCurrentPage.js",async)
  body
    div#root
      +navbar
      div.content-area
        block layout-content