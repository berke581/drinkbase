{
  "name": "drinkbase",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "clean:dist": "shx rm -rf dist",
    "clean:stylesheets": "shx rm -rf public/stylesheets/",
    "copy-files": "shx cp -r ./src/views/ ./{.env,package.json} ./public/ ./dist",
    "resolve-alias": "tsc-alias",
    "prebuild": "run-s clean:*",
    "build:css": "sass --style=compressed --no-source-map --load-path=src/sass/ ./src/sass/style.scss ./public/stylesheets/style.css",
    "build:ts": "tsc -p tsconfig.prod.json",
    "build": "run-s build:*",
    "postbuild": "run-s copy-files resolve-alias",
    "sass-watch": "sass --watch --style=compressed --load-path=src/sass/ ./src/sass/style.scss ./public/stylesheets/style.css",
    "start:dev": "concurrently \"yarn nodemon\" \"yarn sass-watch\"",
    "start:ui": "concurrently --kill-others \"yarn start:dev\" \"browser-sync start --config bs-config.js\"",
    "start:prod": "node -r dotenv-safe/config ./dist/server.js",
    "start:prod-ts-node": "node -r dotenv-safe/config -r ts-node/register/transpile-only -r tsconfig-paths/register ./src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-mongodb-session": "^2.4.4",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^28.1.7",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.5",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "browser-sync": "^2.27.10",
    "chalk": "4.1.2",
    "concurrently": "^7.3.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.2",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "*"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "connect-mongodb-session": "^3.1.1",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "joi": "^17.6.0",
    "mongoose": "^6.5.2",
    "morgan": "^1.10.0",
    "pug": "^3.0.2",
    "sass": "^1.54.5",
    "winston": "^3.8.2"
  }
}
